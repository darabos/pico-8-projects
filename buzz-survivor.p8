pico-8 cartridge // http://www.pico-8.com
version 35
__lua__
p={
 x=0,y=0,
 spd=1,
}

function _draw()
 camera()
 local sx=p.x%8
 local fx=p.x\8
 local sy=p.y%8
 local fy=p.y\8
 for x=-1,16 do
  for y=-1,16 do
   c=flr(
    sin(0.03*(fx+x))*2^2+
    cos(0.04*(fy+y))*2^2)%4
   rectfill(
    x*8-sx,y*8-sy,
    x*8-sx+8,y*8-sy+8,c)
  end
 end
 camera(p.x-60,p.y-60)
 spr(1,p.x,p.y)
end
function _update()
 if btn(⬅️) then p.x-=p.spd end
 if btn(➡️) then p.x+=p.spd end
 if btn(⬆️) then p.y-=p.spd end
 if btn(⬇️) then p.y+=p.spd end
end

