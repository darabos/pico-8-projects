__lua__
y=10
x=50
vy=3
cx=0
--ellensegek
ln={
 {spr=3,x=10},
 {spr=3,x=20},
 {spr=3,x=40},
 {spr=3,x=60},
 {spr=4,x=100},
}

--a jatekos raugrott l-re
function hit(l)
 if l.spr==3 then
  sfx(1)
 elseif l.spr==4 then
  sfx(2)
  del(ln,l)
 end
end

function _draw()
 cls(3)
 --itt allitjuk be a kamerat
 camera(cx,0)
 if x>cx+80 then
  cx=cx+1
 elseif x<cx+40 then
  cx=cx-1
 end
 for i=1,#ln do
  spr(ln[i].spr,ln[i].x,108)
 end
 if vy<0 then
  spr(2,x,y)
 else
  spr(1,x,y)
 end
 y=y+vy
 if y>100 then
  vy=-10
  y=100
  for l in all(ln) do
   d=abs(x-l.x)
   if d<5 then
    hit(l)
   end
  end
 end
 vy=vy+0.5
 irany=0
 ox=x
 if btn(➡️) then
  irany=1
 end
 if btn(⬅️) then
  irany=-1
 end
 x=x+2*irany
 if btnp(❎) then
  x=x+20*irany
  sfx(2)
  rectfill(ox,y,x,y+5,8)
 end 
end

